{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://chronologyai.local/schemas/zoom_credentials.schema.json",
  "title": "Zoom Credentials Configuration",
  "description": "Schema for Zoom API credentials configuration",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "description": "Zoom OAuth application client ID",
      "default": ""
    },
    "client_secret": {
      "type": "string",
      "description": "Zoom OAuth application client secret (sensitive)",
      "default": ""
    },
    "account_id": {
      "type": "string",
      "description": "Zoom account ID for Server-to-Server OAuth",
      "default": ""
    },
    "configured": {
      "type": "boolean",
      "default": false,
      "description": "Whether all required credentials are configured"
    }
  },
  "required": [],
  "additionalProperties": false
}

# ChronologyAI Environment Configuration
# Copy this file to .env and fill in your credentials

# =============================================================================
# Application Settings
# =============================================================================
# Environment: development, staging, or production
APP_ENV=development
# Enable debug mode (set to false in production)
DEBUG=true

# =============================================================================
# Docker Configuration
# =============================================================================
# Backend API port (default: 8000)
BACKEND_PORT=8000
# Frontend port (default: 3000)
FRONTEND_PORT=3000

# =============================================================================
# Azure Blob Storage
# Azure Portal > Storage Account > Access keys
# =============================================================================
AZURE_STORAGE_CONNECTION_STRING=
# Optional: Override default account name
AZURE_STORAGE_ACCOUNT_NAME=dmatstorage
# Optional: Override default container name
AZURE_STORAGE_CONTAINER_NAME=sessions

# =============================================================================
# Azure Speech Services
# Azure Portal > Speech Services > Keys and Endpoint
# =============================================================================
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=japaneast

# =============================================================================
# Azure OpenAI
# Azure Portal > Azure OpenAI > Keys and Endpoint
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# =============================================================================
# Frontend Configuration (for Docker)
# =============================================================================
# API URL for the frontend to connect to
NEXT_PUBLIC_API_URL=http://backend:8000
# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=backend:8000
